<p id="notice"><%= notice %></p>

<h1>Document Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @document_categories.each do |document_category| %>
      <tr>
        <td><%= document_category.name %></td>
        <td><%= document_category.description %></td>
        <td><%= link_to 'Show', [@course, document_category] %></td>
        <td><%= link_to 'Edit', edit_course_document_category_path(@course, document_category) %></td>
        <td><%= link_to 'Destroy', [@course, document_category], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

