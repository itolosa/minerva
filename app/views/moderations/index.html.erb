<p id="notice"><%= notice %></p>

<h1>Moderations</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @moderations.each do |moderation| %>
      <tr>
        <td><%= moderation.user_id %></td>
        <td><%= moderation.course_id %></td>
        <td><%= link_to 'Show', [@course, moderation] %></td>
        <td><%= link_to 'Edit', edit_course_moderation_path(@course, moderation) %></td>
        <td><%= link_to 'Destroy', [@course, moderation], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

