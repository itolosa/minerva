<!DOCTYPE html>
<html>
  <head>
    <title>Minerva</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="uk-offcanvas-content">
      <header>
        <!-- Desktop Menu -->
        <nav id="desktop-nav" class="uk-navbar-container uk-container-expand uk-margin" uk-navbar>
          <div class="desktop-nav-overlay uk-navbar-left">
            <%= link_to 'Minerva', courses_path, { class: "uk-navbar-item uk-logo" } %>
            <ul class="uk-navbar-nav">
              <li class="uk-active"><a href="#">Inicio</a></li>
              <li><a href="#">Mis cursos</a></li>
              <li><a href="#">Mi calendario</a></li>
            </ul>
          </div>

          <div class="desktop-nav-overlay uk-navbar-right">
            <ul class="uk-navbar-nav">
              <li><a href="#">Mi cuenta</a></li>
              <li><a href="#">Cerrar Sesión</a></li>
            </ul>
            <a class="uk-navbar-toggle" uk-search-icon uk-toggle="target: .desktop-nav-overlay; animation: uk-animation-fade" href="#"></a>
          </div>

          <div class="desktop-nav-overlay uk-navbar-left uk-flex-1" hidden>
            <div class="uk-navbar-item uk-width-expand">
              <form class="uk-search uk-search-navbar uk-width-1-1">
                <input class="uk-search-input" type="search" placeholder="Busca un curso..." autofocus>
              </form>
            </div>
            <a class="uk-navbar-toggle" uk-close uk-toggle="target: .desktop-nav-overlay; animation: uk-animation-fade" href="#"></a>
          </div>
        </nav>
        <!-- end Desktop Menu -->

        <!-- Mobile Menu -->
        <nav id="mobile-nav" class="uk-navbar-container" uk-navbar>
          <div class="mobile-nav-overlay uk-navbar-left">
            <a class="uk-navbar-toggle" uk-navbar-toggle-icon uk-toggle="target: #side-menu"></a>
            <a class="uk-navbar-item uk-logo" href="./index.html">Codename: Minerva</a>
          </div>

          <div class="mobile-nav-overlay uk-navbar-right">
            <a class="uk-navbar-toggle" uk-search-icon uk-toggle="target: .mobile-nav-overlay; animation: uk-animation-fade" href="#"></a>
          </div>

          <div class="mobile-nav-overlay uk-navbar-left uk-flex-1" hidden>
            <div class="uk-navbar-item uk-width-expand">
              <form class="uk-search uk-search-navbar uk-width-1-1">
                <input class="uk-search-input" type="search" placeholder="Buscar..." autofocus>
              </form>
            </div>
            <a class="uk-navbar-toggle" uk-close uk-toggle="target: .mobile-nav-overlay; animation: uk-animation-fade" href="#"></a>
          </div>
        </nav>
        <!-- end Mobile Menu -->
      </header>
      <content>
        <%= yield %>
      </content>

      <footer>
      </footer>

      <div id="side-menu" uk-offcanvas>
        <button class="uk-offcanvas-close" type="button" uk-close></button>
        <div class="uk-offcanvas-bar">
          <ul class="uk-nav uk-nav-default">
            <li class="uk-active"><%= link_to 'Inicio', courses_path %></li>
            <li><a href="#">Mis cursos</a></li>
            <li><a href="#">Mi calendario</a></li>
            <li class="uk-nav-divider"></li>
            <li><a href="#">Mi cuenta</a></li>
            <li><a href="#">Cerrar Sesión</a></li>
          </ul>
        </div>
      </div>
    </div>
  </body>
</html>
