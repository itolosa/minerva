<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th>Document category</th>
      <th>Downloads count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
        <td><%= document.user %></td>
        <td><%= document.document_category %></td>
        <td><%= document.downloads_count %></td>
        <td><%= link_to 'Show', [@course, document] %></td>
        <td><%= link_to 'Edit', edit_course_document_path(@course, document) %></td>
        <td><%= link_to 'Destroy', [@course, document], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

